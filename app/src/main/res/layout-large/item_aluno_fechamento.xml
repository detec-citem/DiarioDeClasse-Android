<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="3dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/lay_aluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cinza"
        >

        <TextView
            android:id="@+id/tv_aluno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="aluno"
            android:textColor="@color/cinza_titulo_tela_interna"
            android:textSize="22dp"
            android:textStyle="bold"
            segmentedgroup:layout_constraintEnd_toStartOf="@+id/textView7"
            segmentedgroup:layout_constraintStart_toStartOf="parent"
            segmentedgroup:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_confirmado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/confirma"
            android:src="@drawable/btn_done"
            android:visibility="visible"
            segmentedgroup:layout_constraintBottom_toBottomOf="parent"
            segmentedgroup:layout_constraintEnd_toEndOf="parent"
            segmentedgroup:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_desabilitado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/confirma"
            android:src="@drawable/btn_done_disabled"
            android:visibility="visible"
            segmentedgroup:layout_constraintBottom_toBottomOf="parent"
            segmentedgroup:layout_constraintEnd_toEndOf="parent"
            segmentedgroup:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:textSize="22dp"
            segmentedgroup:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="8dp"
            android:text="Nota: S/N"
            android:textColor="@color/cinza_escuro"
            android:textSize="22dp"
            segmentedgroup:layout_constraintBottom_toBottomOf="parent"
            segmentedgroup:layout_constraintStart_toStartOf="parent"
            segmentedgroup:layout_constraintTop_toBottomOf="@+id/tv_aluno" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="Faltas: 77"
            android:textColor="@color/cinza_escuro"
            android:textSize="22dp"
            segmentedgroup:layout_constraintBottom_toBottomOf="@+id/textView5"
            segmentedgroup:layout_constraintStart_toEndOf="@+id/textView5"
            segmentedgroup:layout_constraintTop_toTopOf="@+id/textView5" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="A/C: 77"
            android:textColor="@color/cinza_escuro"
            android:textSize="22dp"
            segmentedgroup:layout_constraintBottom_toBottomOf="@+id/textView8"
            segmentedgroup:layout_constraintStart_toEndOf="@+id/textView8"
            segmentedgroup:layout_constraintTop_toTopOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="F/A: 77"
            android:textColor="@color/cinza_escuro"
            android:textSize="22dp"
            segmentedgroup:layout_constraintBottom_toBottomOf="@+id/textView6"
            segmentedgroup:layout_constraintEnd_toStartOf="@+id/img_desabilitado"
            segmentedgroup:layout_constraintStart_toEndOf="@+id/textView6"
            segmentedgroup:layout_constraintTop_toTopOf="@+id/textView6" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>