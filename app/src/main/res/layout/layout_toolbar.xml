<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="false"
        android:layout_alignParentLeft="true"
        >

    </FrameLayout>

    <TextView
        android:id="@+id/txt_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/white"
        android:textAppearance="@style/Theme.Toolbar.Title"
        android:textSize="20sp"
        android:text="Di@rio de Classe"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        />

    <TextView
        android:id="@+id/txt_toolbar_listar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textAppearance="@style/Theme.Toolbar.Title"
        android:textSize="16sp"
        android:text="LISTAR"
        android:layout_alignBaseline="@id/txt_toolbar_title"
        android:visibility="gone"
        android:layout_toLeftOf="@id/menu"

        />

    <TextView
        android:id="@+id/txt_toolbar_enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/txt_toolbar_title"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:text="ENVIAR"
        android:textAppearance="@style/Theme.Toolbar.Title"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_toLeftOf="@id/menu"
        />

    <TextView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:layout_alignBaseline="@id/txt_toolbar_title"
        android:gravity="center"
        android:background="@drawable/menu"
        android:visibility="invisible"

        />

    <TextView
        android:id="@+id/buscarCarteirinhas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:padding="0dp"
        android:layout_alignBaseline="@id/txt_toolbar_title"
        android:gravity="center"
        android:background="@drawable/buscarcarteirinhas"
        android:visibility="invisible"

        />

</RelativeLayout>