<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="3dp">

    <LinearLayout
        android:id="@+id/lay_aluno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cinzaFrequenciaLancamento"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="15dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_aluno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/cinza_titulo_tela_interna"
            android:text="AAAA"
            android:textSize="17dp"
            />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:id="@+id/tv_status_aluno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="AAAA"
                android:textSize="17dp"
                />

            <TextView
                android:id="@+id/tv_posicao_aluno_turma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/tv_status_aluno"
                android:text="AAAA"
                android:textSize="17dp"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</LinearLayout>