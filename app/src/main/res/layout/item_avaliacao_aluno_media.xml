<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="3dp"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cinzaFrequenciaLancamento"
        >

    <TextView
        android:id="@+id/tv_aluno"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:singleLine="false"
        android:text="HUMBERTO SILVA"
        android:textSize="17dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_label_media"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_label_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/tv_aluno"
        android:layout_toRightOf="@+id/tv_aluno"
        android:text="MÃ©dia:"
        android:textSize="17dp"
        android:background="@drawable/botao_cinza"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/tv_aluno"
        app:layout_constraintEnd_toEndOf="@+id/img_replay"
        app:layout_constraintStart_toEndOf="@+id/img_down"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_media"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toEndOf="@+id/tv_label_media"
            android:layout_toRightOf="@+id/tv_label_media"
            android:background="@drawable/botao_cinza"
            android:text="S/N"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/tv_label_media"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_label_media"
            app:layout_constraintTop_toTopOf="@+id/tv_label_media" />

    <ImageView
        android:id="@+id/img_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/tv_media"
        android:layout_toRightOf="@id/tv_media"
        android:padding="10dp"
        android:src="@drawable/icon_arrow_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img_down" />

    <ImageView
        android:id="@+id/img_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/img_up"
        android:layout_toRightOf="@id/img_up"
        android:padding="10dp"
        android:src="@drawable/icon_arrow_down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_aluno" />

    <ImageView
        android:id="@+id/img_replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_toEndOf="@id/img_down"
        android:layout_toRightOf="@id/img_down"
        android:padding="10dp"
        android:src="@drawable/replay"
        app:layout_constraintBottom_toBottomOf="@+id/img_down"
        app:layout_constraintStart_toEndOf="@+id/img_down"
        app:layout_constraintTop_toTopOf="@+id/img_down" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>