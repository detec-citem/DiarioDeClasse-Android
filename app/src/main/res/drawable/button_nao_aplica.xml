<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <solid android:color="@color/amarelo_texto_dia_letivo"/>
            <size
                android:width="80dp"
                android:height="80dp"
                />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/amarelo_escuro"/>
            <size
                android:width="80dp"
                android:height="80dp"
                />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="@color/grey"/>
            <size
                android:width="80dp"
                android:height="80dp"
                />
        </shape>
    </item>
</selector>